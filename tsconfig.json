{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@octotread/components/*": [
        "components/*"
      ],
      "@octotread/services/*": [
        "services/*"
      ],
      "@octotread/layouts/*": [
        "layouts/*"
      ],
      "@octotread/models/*": [
        "models/*"
      ],
      "@octotread/utils/*": [
        "utils/*"
      ],
      "@octotread/theme/*": [
        "theme/*"
      ]
    }
  },
  "include": [
    "src",
    "scripts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}